<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="ru.nsu.belov.controller.GameController"
            style="-fx-background-color: rgb(180, 200, 150);">

    <!-- Игровое поле -->
    <center>
        <StackPane>
            <!-- Выровнять Canvas по центру -->
            <Canvas fx:id="canvas" width="800" height="600"/>

            <!-- Концовка игры -->
            <VBox fx:id="endOverlay" alignment="CENTER" spacing="20"
                  visible="false"
                  style="-fx-background-color: rgba(0, 0, 0, 0.6);"
                  prefWidth="300" prefHeight="200">
                <Label fx:id="statusLabel" style="-fx-font-size: 32px; -fx-text-fill: white;"/>
                <HBox spacing="25" alignment="CENTER">
                    <Button text="Перезапуск" onAction="#restartGame"/>
                    <Button text="Настройки" onAction="#goToSettings"/>
                </HBox>
            </VBox>
        </StackPane>
    </center>

</BorderPane>
